<% include include/top.ejs -%>
<!-- mirror-list -->
    <div class="container">
      <div class="page-header">
          <h1>Apps<span class="pull-right">
            <button class="btn btn-success" data-toggle="modal" data-target="#createModal">
              <span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Create</button>
          <span></h1>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover">
<% keys.forEach(function(id) { -%>
            <tr>
              <td class="col-md-9">
                <a href="/distribution/<%= id %>">
                  <b><%= apps[id].Name %></b>
                </a>
              </td>
              <td class="col-md-1">
                <a href="/app/<%= id %>/remove">
                  <span class="glyphicon glyphicon-remove-circle"></span>&nbsp;Remove</a>
              </td>
            </tr>
<% }) -%>
          </table>
        </div>
      </div>
    </div>
    <div class="modal fade" id="createModal" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Create App</h4>
          </div>
          <div class="modal-body">
            <form class="form-horizontal" role="form" method="POST" action="/app">
              <div class="form-group">
                <label for="name" class="col-md-5 control-label">App Name</label>
                <div class="col-md-7">
                  <input type="text" name="name" id="name" class="form-control">
                </div>
              </div>
              <div class="form-group">
                <label for="username" class="col-md-5 control-label">Default Username (optional)</label>
                <div class="col-md-7">
                  <input type="text" name="username" id="username" class="form-control" placeholder="Bot">
                </div>
              </div>
              <div class="form-group">
                <label for="icon_url" class="col-md-5 control-label">Default Icon (optional)</label>
                <div class="col-md-7">
                  <input type="text" name="icon_url" id="icon_url" class="form-control" placeholder="http://i.imgur.com/bHiFyoA.png">
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-4 col-md-7">
                  <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-ok-sign"></span>&nbsp;Create</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
<% include include/bottom.ejs -%>
